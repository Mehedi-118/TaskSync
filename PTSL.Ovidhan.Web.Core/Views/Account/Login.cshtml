@model PTSL.Ovidhan.Web.Core.Model.LoginVM
@{
    ViewData["Title"] = "LogIn";
    Layout = "~/Views/Shared/_LogInSignUp.cshtml";
    var a = 10;
}
@section styles{
    }

<div class="card card-body text-center m-0 p-0" id="banner">
    <h1>
        Manage your Time Well <span>
            <img src="~/img/dashboardLogo.jpg" class=" mt-2" alt=""
                 srcset="">
        </span>
    </h1>
</div>
<div class="container-fluid">
    <div class="row ">
        <div class="col-md-8 p-0">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner mx-auto ">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/img/carouselImage3.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item ">
                        <img class="d-block w-100" src="~/img/carouselImage1.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/img/carouselImage2.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <!-- <div class="col-md-1"></div> -->
        <div class="col-md-3 col-sm-6 mx-auto">
            <div class="card bg-light" id="loginCard">
                <img src="~/img/userLogo.jpg" class=" mx-auto d-block border my-2 mb-0" id="loginCardImg" alt="">
                <div class="card-body">
                    <h5 class="card-title text-center m-0 p-2"> Log In</h5>

                    <form method="post" asp-action="Login" asp-controller="Account">
                        <div class="form-group mt-3">
                            <label asp-for=UserEmail>Email address</label>
                            <input type="email" class="form-control" asp-for="UserEmail" aria-describedby="emailHelp" placeholder="Enter email" autocomplete="on">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small><br />
                            <span asp-validation-for="UserEmail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserPassword">Password</label>
                            <input type="password" class="form-control" asp-for="UserPassword" id="exampleInputPassword1" placeholder="Password">
                            <span>
                                <i class="far fa-eye" id="togglePassword" style="margin-top: -30px;margin-right:10px; cursor: pointer; float:right"></i>

                            </span>
                            <span asp-validation-for="UserPassword" class="text-danger"></span>
                        </div>
                        <input type="submit" class="btn btn-primary btn-sm mt-5" value="Log In">
                        <a asp-controller="Account" asp-action="Registration" class="my-5" style="float: right;"> sign up</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script type="text/javascript">
        const togglePassword = document.querySelector('#togglePassword');
        const password = document.querySelector('#exampleInputPassword1');

        togglePassword.addEventListener('click', function (e) {
            // toggle the type attribute
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);
            // toggle the eye slash icon
            this.classList.toggle('fa-eye-slash');
        });
    </script>
    <partial name="_ValidationScriptsPartial" />

}