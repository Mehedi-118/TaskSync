
@model UserRegisterModel
@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_LogInSignUp.cshtml";
}
@section styles{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">


    <style>
        .container-fluid {
            background-image: url("/img/carouselImage1.jpg");
            background-repeat: no-repeat;
            height: 100vh;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

    </style>
}
<form class="bg-light" method="post">

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-5 bg-light mx-auto my-5" style="background-color:rgba(0,0,0,.5);">
                <h1 class="text-info text-center">Registration</h1>
                <h6 class="text-dark text-center">Create your account. It's free and only takes a minute.</h6>
                <hr />
                <div class="row">
                    <div class="card">
                        <img src="~/img/userLogo.jpg" class="rounded mx-auto d-block border my-2 mb-0 card-img-top" style="width:100px; height:100px;" id="loginCardImg" alt="">
                        <div class="card-body">
                            <div class="row d-flex">
                                <div class="col-md-11 mx-auto">

                                    <div class="form-group">
                                        <label asp-for="UserName" class="form-label">User Name</label>
                                        <input type="text" class="form-control" asp-for="UserName" aria-describedby="" placeholder="Enter User Name" autocomplete="on">
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="col-md-11 mx-auto form-group">
                                    <label asp-for="Email" class="form-label">Email </label>
                                    <input type="email" class="form-control" asp-for="Email" aria-describedby="email" placeholder="Email" autocomplete="on">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-11 mx-auto form-group">
                                    <label asp-for="Password" class="form-label">Password </label>
                                    <input type="password" class="form-control" asp-for="Password" placeholder="Enter Password" autocomplete="off">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-md-11 mx-auto form-group">
                                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password </label>
                                    <input type="password" class="form-control" asp-for=ConfirmPassword aria-describedby="" placeholder="Retype Password" autocomplete="off">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4 mx-auto" style="text-align:center; ">
                                <input type="submit" class=" btn btn-success btn-md m-2 mx-auto" value="Register Now">
                            </div>
                            <div class="form-text text-muted ">Already have an account? <a asp-controller="Account" asp-action="LogIn" class="mt-2"> Sign In</a>  </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/5fddbe02a1.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}